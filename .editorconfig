root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx,cjs,mjs}]
quote_type = double

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_size = 2

# CSS/SCSS
[*.{css,scss}]
indent_size = 2